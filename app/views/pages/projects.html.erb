<%# ----------------------------- Banner Clock & Date ------------------------------- %>
<script>
  function startTime() {
    var today = new Date();   
    var date = today.getUTCDate();
    var month = today.getUTCMonth() + 1; // here getUTCMonth() returns month from 0-11 not 1-12
    var year = today.getUTCFullYear();
    var h = today.getHours();
    var m = today.getMinutes();
    var s = today.getSeconds();
    m = checkTime(m);
    s = checkTime(s);
    document.getElementById('clock').innerHTML = "UNTIL TODAY " + date + "/" + "0" + month + "/" + year + " " + "at" + " " + h + ":" + m + ":" + s;
    var t = setTimeout(startTime, 500);
  }
    function checkTime(i) {
      if (i < 10) {i = "0" + i};  // add zero in front of numbers < 10
      return i;
    }
  startTime();
</script>
