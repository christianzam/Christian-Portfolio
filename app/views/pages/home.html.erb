<div class="d-flex banner">
  <div class="dynamic-text-container">
    <div class="dynamic-text-font" id="nav-typed-text"></div>
  </div>
    <div class="banner-paragraph ">
      <span class="text-justify">A full stack developer who</span><span> enjoys building and designing   
      </span><span>Front</span><span style="color:yellow;"> & </span><span>Back-End applications</span>
    </div>
  <div class="d-flex justify-content-end" id="word-about">
    <%= link_to '', "#{root_path}#bio", class: "about-myself" %>   
  </div>
</div>
<%# -------------------------- CONTENT --------------------------------------------- %>
<div class="first-container-home-content" id="bio"> 
  <div>
    <%= image_tag("chris.jpg", :class => "chris-pic", :id => "chris-pic-border", alt: "upload") %>
  </div>
  <div>
    <%= image_tag("What_about_me_p.png", :class => "what-about-me-p", :id => "what-about-me-border", alt: "upload") %>
  </div>   
  <div class= "more-text-container">
    <div id="clicker"> <%# id clicker for JS file top to bottom %>
      <p>
        <span><%= link_to '', "#{root_path}#hobbies", class: "more-about-me-text"%></span> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="arrows" id="myDIV"><i class="fas fa-angle-double-down"></i></span>
      </p>           
    </div>
  </div>     
</div>
<%# --------------------------------2nd container---------------- %>
<div class="second-container-home-content">
  <div>
    <%= image_tag("Hobbies.png", :class => "hobbies-p", :id => "hobbies-p-border", alt: "upload") %>
  </div> 
  <div class="pics-container" id="hobbies">
    <div class="ski-pic-container">
      <%= image_tag("skiing.jpg", :class => "ski-pic", alt: "upload") %> 
    </div>
    <div class="bike-pic-container">
      <%= image_tag("mbike.jpg", :class => "bike-pic", alt: "upload") %>
    </div>
    <div class="board-video-container">
      <iframe class="board-video"
        src= "https://www.youtube.com/embed/R7fPZ8d9lnI" 
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen>
      </iframe>
    </div>
  </div>   
</div>
